{
    "name"       : "centraldesktop/static-logger",
    "description": "A static logger based on PSR-3",

    "license": "Apache-2.0",

    "require": {
        "php"    : ">=5.3.6",
        "psr/log": "~1.0"
    },

    "suggest": {
        "seldaek/monolog": "Log some place interesting rather than nowhere"
    },

    "require-dev": {
        "phpunit/phpunit"          : ">=3.7.0",
        "phpmd/phpmd"              : "1.5.*",
        "pdepend/pdepend"          : "1.1.*",
        "squizlabs/php_codesniffer": "1.4.*",
        "monolog/monolog"          : "1.7.*"
    },


    "autoload": {
        "psr-4": {
            "Log\\": "src/"
        }
    }
}
